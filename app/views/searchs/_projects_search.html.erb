<% @results.each do |p| %>
    <%
      # singular/plural
      @spjobs = p.jobs.count != 1 ? "offene Jobs" : "offener Job"
    %>
    <table id="searchresults">
      <tbody>
        <tr>
          <td class="pic"><%= link_to image_tag(p.icon_url), p %>
          </td>
          <td class="title"><%= link_to p do %><h6><%= p.title %></h6><% end %><p>am <b><%= fdate p.created_at %></b></p></td>
          <td class="count">
            <% if @cat == 'Projekte' %>
              <%= pluralize(p.has_members.count, "Teammitglied") %>, 
              <%= pluralize(p.has_followers.count, "Beobachter") %><br />
            <% end %>
            <% if p.jobs.count > 0 %>
              <span><%= image_tag "jobs.png" %></span> 
              <b><%= pluralize(p.jobs.count, "Job") %></b>
            <% end %>
            <br />
            <% if @cat == 'Jobs' %>
              <ul>
              <% p.jobs.each do |j| %>
                  <li><%= j.name %></li>
              <% end %>
              </ul>
            <% end %>
          </td>
          <td class="follow">
            <%= link_to p, :class=>"stdBtn" do %><p>Ansehen</p><%= image_tag "details-arrow.png" %></a><% end %>
            <%= link_to '', :class=>"stdBtn" do %><p>Beobachten</p><%= image_tag "spec.png" %></a><% end %>
          </td>
        </tr>
      </tbody>
    </table>
<% end %>