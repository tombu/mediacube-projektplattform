<div id="rightbar">
	<div id="dashboardhead"> 
	  <h2>Aktionen</h2>
	   <%= link_to new_project_path, :class=>"stdBtn" do %><p>Neues Projekt anlegen</p><%= image_tag "new.png" %></a><% end %><br /><br />
	   <%= link_to new_project_path, :class=>"stdBtn" do %><p>Profil bearbeiten</p><%= image_tag "editit.png" %></a><% end %>
	</div>

	<div id="myproject">
		<h2>Projekte in Arbeit</h2>
		<% if @active_projects.first != nil %>
			<% @active_projects.each do |p| %>
				<div class="project">
				<%= link_to image_tag(p.cover.asset.url :small), p, :class=>"pic" %>
				<p><%= link_to p.title, p %><br><span class="sl"><%= p.roles.count %> Mitarbeiter</span></p>
				</div>
		<% end else %>
		<p class="nodisplay"><i>Keine Projekte in Arbeit &hellip;</i></p>
		<% end %>
	</div>

	<div id="followprojects">
		<h2>beobachtete Projekte</h2>
		<% if @following_projects.first != nil %>
			<% @following_projects.each do |p| %>
		  <div class="project">
			<%= link_to image_tag(p.cover.asset.url :small), p, :class=>"pic" %>
			<p><%= link_to p.title, p %><br><span class="sl"><%= p.roles.count %> Mitarbeiter</span></p>
		  </div>
		<% end else %>
		<p class="nodisplay"><i>Keine beobachteten Projekte &hellip;</i></p>
		<% end %>
	</div>
</div>