<%= render 'layouts/sidebar_sorting' %>
<div id="rightbar">
    <div id="dashboardhead"> 
      <h2>Aktionen</h2>
       <%= link_to new_project_path, :class=>"stdBtn" do %><p>Neues Projekt anlegen</p><%= image_tag "details-arrow.png" %></a><% end %><br /><br />
       <%= link_to new_project_path, :class=>"stdBtn" do %><p>Profil bearbeiten</p><%= image_tag "editit.png" %></a><% end %>
    </div>

    <div id="myproject">
        <h2>Projekte</h2>
        <% @active_projects.each do |p| %>
          <div class="project">
            <%= link_to image_tag("user-40.jpg"), p, :class=>"pic" %>
            <p><%= link_to p.title, p %><br><span class="sl"><%= p.roles.count %> Mitarbeiter</span></p>
          </div>
        <% end %>
    </div>

    <div id="followprojects">
        <h2>beobachtete Projekte</h2>
        <% @following_projects.each do |p| %>
          <div class="project">
            <%= link_to image_tag("user-40.jpg"), p, :class=>"pic" %>
            <p><%= link_to p.title, p %><br><span class="sl"><%= p.roles.count %> Mitarbeiter</span></p>
          </div>
        <% end %>
    </div>
</div>