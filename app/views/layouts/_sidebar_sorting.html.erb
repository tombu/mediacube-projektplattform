<div id="sidebar">  <h2>Status</h2>	<ul class="status" active="<%= params[:status] %>">    <% ["Alle", "Idee", "In Arbeit", "Abgeschlossen"].each do |s| %>      <li>        <% if s == "Alle" %><%= link_to s, projects_path(:category=>params[:category]) %>        <% else %><%= link_to s, projects_path(:category=>params[:category], :status=>s) %><% end %>      </li>    <% end %>	</ul>	<h2>Kategorie</h2>  <ul class="categories" active="<%= params[:category] %>">    <li><%= link_to "Alle", projects_path(:status=>params[:status]) %></li>    <% Category.sorted_asc.each do |c| %>      <li><%= link_to c.label, projects_path(:category=>c.label, :status=>params[:status]) %></li>    <% end %>  </ul>	</div>