<div id="sidebar">  <h2>Status</h2>	<ul class="status" active="<%= params[:status] %>">    <% @status = ["Alle", "Idee", "In Arbeit", "Abgeschlossen"] %>    <% @status.each do |s| %>      <% if s == "Alle" %>        <li><%= link_to s, projects_path(:category=>params[:category]) %></li>      <% else %>        <li><%= link_to s, projects_path(:category=>params[:category], :status=>s) %></li>      <% end %>    <% end %>	</ul>	<h2>Kategorie</h2>  <ul class="categories" active="<%= params[:category] %>">    <li><%= link_to "Alle", projects_path(:status=>params[:status]) %></li>    <% Category.order("label ASC").each do |c| %>      <li><%= link_to c.label, projects_path(:category=>c.label, :status=>params[:status]) %></li>    <% end %>  </ul>	</div>