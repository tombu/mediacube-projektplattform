<!-- OVERLAY -->
<div id="overlaySendInvitation" class="overlay">
	<h1>Team erweitern - User einladen</h1>
	<a class="close" id="close"><%= image_tag 'close.png' %></a>
	<div class="content">
		<%= form_for Notification.new, :method => :post, :html => { :id => "invitation_form" } do |f| %>
			<%= hidden_field_tag :invitation, true %>
			<%= hidden_field_tag :project_id, @project.id %>
		  <%= text_field_tag :username, "", :class => "stdInpt" %>
		  <%= f.submit "Einladung schicken", :class => "stdBtn no2" %>
		<% end %>
	  <div class="clean"></div>
	</div>
</div>
<% 
@usernames = Array.new
User.all.each do |u|
	@usernames << u.name
end
%>
<script type="text/javascript">
  $(function() {
    $('#invitation_form .stdInpt').autocomplete(<%=raw @usernames %>);
  });
</script>