<% 
  if @searchQuery 
    @warning = @projects.size == 0 ? " warning" : ""
%>
  <p class="stdNotice <%= @warning %>"><b><%= @projects.size %></b> Suchergebnisse für &#132;<i><%= params[:search] %>&#147;</i></p>
<% end %>
<div id="sidebar">
  <h2>Status</h2>
	<ul>
	  <li><a href="#" class="active">Alle</a></li>
	  <li><a href="#">Ideenfindung</a></li>
	    <li><a href="#">Konzept</a></li>
	    <li><a href="#">Durchführung</a></li>
	    <li><a href="#">Abgeschlossen</a></li>
	</ul>
	<h2>Kategorie</h2>
	<ul>
	  <li><a href="#" class="active">Alle</a></li>
	    <li><a href="#">Mediendesign</a></li>
	    <li><a href="#">Film</a></li>
	    <li><a href="#">Animation</a></li>
	    <li><a href="#">Audio</a></li>
	    <li><a href="#">Gamedesign</a></li>
	    <li><a href="#">Web</a></li>
	</ul>	
</div>
<div id="overview">

<% 
  @projects.each do |p| 
    @owner = p.roles.where(:role => 'owner').first.user
%>
<div class="boxcontent">
  <div class="projectcategory mmt"><%= p.categories.first.label %></div>
  <!-- <div class="projectstatus">
    <span class="statusconcept">Konzept</span>
    <span class="statussearch">Gesucht</span>
  </div> -->
  <div class="projectinfo">
    <h3><%= p.title %></h3>
    <span class="projectimg">
      <%= link_to p do %>
      <img src="images/projektimg.jpg">
      <% end %>
    </span>
    <span class="infotxt">
      <p>
      
      <%= p.description %>
      </p>
    </span> 
    <%= link_to p, :class =>'details' do image_tag "details-arrow.png" end %>
  </div>
  <div class="projectadmin">
    <p class="left">von: <%= link_to @owner.name, @owner %></p>
    <p class="right"><b><%= p.followers.count %></b> Beobachter</p>
  </div>
</div>
<% end %>
</div>
