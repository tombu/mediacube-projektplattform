<%= render 'layouts/sidebar_sorting' %>

<div id="projectdetails">
  <div id="topbar">
    <%= link_to @project, :class=>"stdBtn" do %><p>Zurück zum Projekt</p><%= image_tag "back.png" %></a><% end %>
    <%= link_to "javascript:overlay('#overlayPrivacy');", :class=>"stdBtn no3" do %><p>Sichtbarkeit</p><%= image_tag "editit.png" %></a><% end %>
  </div>

  <div id="projectinfo">
    <%= render "info_form" %>
  </div>
  <div id="projectcover">
	   <%= render "media/cover_upload_form" %>
	</div>
</div>

<div id="rightbar">
  <!-- STATUS -->
  <div id="projectstate">
    <h5 class="noedit">Projektstatus</h5>
    <%= render "status_form" %>
  </div>
  
  <!-- PROGRESS -->
  <div id="projectprogress">
    <h5 class="noedit">Stages</h5>
    <%= render "stages_form" %>
  </div>

  <!-- JOBS -->
  <div id="searchingmember">
    <h5 class="noedit">Auf der Suche nach <span>(<%= @project.jobs.count %>)</span></h5>
    <%= render "jobs_form" %>
  </div>

  <!-- TEAM -->
  <div id="teammember">
    <h5 class="noedit">Team <span>(<%= @project.has_members.count %>)</span></h5>
    <%= render "team_form" %>
  </div>
</div>

<!-- OVERLAY -->
<div id="overlayPrivacy" class="overlay">
  <h1>Sichtbarkeit</h1>
  <a class="close" id="close"><%= image_tag 'close.png' %></a>
  <div class="content">
    <%= form_for @project do |f| %>
          <%= f.check_box :isPublic %><%= f.label :isPublic, "Updates sichtbar?" %>
          <br />
      <%= f.submit %>
    <% end %>
    <div class="clean"></div>
  </div>
</div>