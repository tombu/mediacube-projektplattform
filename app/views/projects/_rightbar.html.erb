<div id="rightbar">  <!-- PROGRESS -->  <div id="projectprogress">    <h5 class="noedit">Projektstatus</h5>    <div class="edit">      <h4 class="status" rel="<%= @project.status %>"><%= @status_names[@project.status] %></h4>    </div>    <% if @project.status == "inprogress" %>        <ul id="stagebar" currentstage="<%= @project.currentstage %>">        <% @project.stages.order("position ASC").each do |s| %>          <li position="<%= s.position %>"><%= s.name %>          <div><%= s.description %></div>          </li>          <% end %>        </ul>     <% end %>  </div>  <!-- JOBS -->  <div id="searchingmember">    <h5 class="noedit">Auf der Suche nach <span>(<%= @open_jobs.count %>)</span></h5>    <div class="edit">    <% if @open_jobs.first != nil %>      <ul>        <% @open_jobs.each do |j| %>        <li>»&nbsp;&nbsp; <%= j.name %></li>        <% end %>      </ul>    <% else %>    <p class="nodisplay"><i>Keine Jobs zu vergeben &hellip;</i></p>    <% end %>    </div>  </div>    <!-- TEAM -->  <div id="teammember">    <h5 class="noedit">Team <span>(<%= @project.roles.count %>)</span></h5>    <div class="edit">      <div id="memberlist">        <div class="member">        <%= link_to image_tag(avatar_url(@owner.user, 40)), @owner.user, :class=>"pic" %>        <p><b><%= link_to @owner.user.name, @owner.user %></b><br><span class="sl"><b style="color:#009ee3;">Gründer</b>, <%=  @owner.job.name %></span></p>        </div>        <hr />        <% @project.roles.each do |r| if r != @owner %>          <div class="member">          <%= link_to image_tag(avatar_url(r.user, 40)), r.user, :class=>"pic" %>          <p><%= link_to r.user.name, r.user %><br><span class="sl"><%= r.job.name %></span></p>          </div>        <% end end %>	      </div>    </div>  </div>  <!-- FOLLOWER -->  <div id="follower">	  <h5 class="noedit">Beobachter <span>(<%= @project.followers.count %>)</span></h5>	  <% if @project.followers.first != nil %>      <div id="followerlist">      <% @project.followers.each do |f| %>        <%= link_to image_tag(avatar_url(f.user, 30), :title => f.user.name, :class => "tooltip"), f.user %>      <% end %>      </div>    <% else %>      <p class="nodisplay"><i>Keine Beobachter &hellip;</i></p>    <% end %>  </div></div>