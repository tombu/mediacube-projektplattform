<div id="rightbar" class="getright">  <!-- PROGRESS -->  <div id="projectprogress">    <h5 class="noedit">Projektstatus</h5>    <div class="edit">      <h4 class="status" rel="<%= @project.status %>"><%= Project.parse_status @project.status %></h4>    </div>    <% if @project.status != "idea" %>        <ul id="stagebar" currentstage="<%= @project.currentstage %>">        <% @project.stages.order("position ASC").each do |s| %>          <li position="<%= s.position %>"><%= s.name %></li>        <% end %>        </ul>     <% end %>  </div>	<!-- JOBS -->  <div id="searchingmember">    <h5 class="noedit">Auf der Suche nach <span>(<%= @project.jobs.count %>)</span></h5>    <div class="edit">    <% if @project.jobs.first != nil %>      <ul>        <% @project.jobs.each do |j| %>        <li>»&nbsp;&nbsp; <%= j.name %></li>        <% end %>      </ul>    <% else %>    <p class="nodisplay"><i>Keine Jobs zu vergeben &hellip;</i></p>    <% end %>    </div>  </div>    <!-- TEAM -->  <div id="teammember">    <h5 class="noedit">Team <span>(<%= @project.has_members.count %>)</span></h5>    <div class="edit">      <div id="memberlist">        <div class="member">        <%= link_to image_tag(avatar_url(@owner.user, 40)), @owner.user, :class=>"pic" %>        <p><b><%= link_to @owner.user.name, @owner.user %></b><br><span class="sl"><b style="color:#009ee3;">Gründer</b>, <%=  @owner.job %></span></p>        </div>        <hr />        <% @project.has_members.each do |role| if role != @owner %>          <div class="member">          <%= link_to image_tag(avatar_url(role.user, 40)), role.user, :class=>"pic" %>          <p><%= link_to role.user.name, role.user %><br><span class="sl"><%= role.job %></span></p>          </div>        <% end end %>	      </div>    </div>  </div>  <!-- FOLLOWER -->  <div id="follower">	  <h5 class="noedit">Beobachter <span>(<%= @project.has_followers.count %>)</span></h5>	  <% if !@project.has_followers.first.nil? %>      <div id="followerlist">      <% @project.has_followers.each do |role| %>        <%= link_to image_tag(avatar_url(role.user, 30), :title => role.user.name, :class => "tooltip"), role.user %>      <% end %>      </div>    <% else %>      <p class="nodisplay"><i>Keine Beobachter &hellip;</i></p>    <% end %>  </div></div>