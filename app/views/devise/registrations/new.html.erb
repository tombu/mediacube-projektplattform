<h2>Registrieren</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
	
	<p><%= f.label :name %><br />
  <%= f.text_field :name, :class => "stdInpt" %></p>
	
  <p><%= f.label :email %><br />
  <%= f.text_field :email, :class => "stdInpt" %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password, :class => "stdInpt" %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :class => "stdInpt" %></p>

  <p><%= f.submit "Registrieren", :class => "stdBtn no2" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
